@using System.Web.Optimization
@{
    SetAntiForgeryCookie();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="~/favicon.ico">
    <title>@ViewBag.Title-微信管理系统</title>
    @Styles.Render("~/Bundles/admin/css")
    @RenderSection("styles", required: false)
    <script type="text/javascript">
        var abp = abp || {}; abp.appPath = '@ApplicationPath';
    </script>
    <!--[if lt IE 9]>
        <script src="@Url.Content("~/Scripts/others/html5shiv.js")"></script>
        <script src="@Url.Content("~/Scripts/others/respond.min.js")"></script>
    <![endif]-->
</head>
<body class="sidebar-mini skin-purple-light fixed" style="height: auto;">
<div class="wrapper" style="height: auto;">
    @Html.Partial("_Header")
    @Html.Partial("_SideBar")
    <div class="content-wrapper">
        @RenderBody()
    </div>
    @Html.Partial("_Footer")
    @Html.Partial("_ControlSideBar")
</div>
@Scripts.Render("~/Bundles/admin/js")
</body>
@RenderSection("scripts", required: false)
</html>
